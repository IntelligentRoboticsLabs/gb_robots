<launch>
  <arg name="world_name" default="$(find gb_robots)/worlds/restaurant.world"/>
  <env name="GAZEBO_MODEL_PATH" value="$(find gb_robots)/worlds/models"/>
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="use_sim_time" value="true"/>
    <arg name="debug" value="false"/>
    <arg name="world_name" value="$(arg world_name)"/>
    <arg name="gui" value="false"/>
  </include>

  <arg name="posx" value="1.32"/>
  <arg name="posy" value="1.53"/>
  <arg name="posYaw" value="0.0"/>
  <arg name="robot_name" value="kobuki"/>

  <include file="$(find gb_robots)/launch/includes/robot.launch.xml">
    <arg name="posx" value="$(arg posx)"/>
    <arg name="posy" value="$(arg posy)"/>
    <arg name="posYaw" value="$(arg posYaw)"/>
    <arg name="robot_name" value="$(arg robot_name)"/>
  </include>

  <node pkg="laser_filters" type="scan_to_scan_filter_chain" name="laser_filter">
    <rosparam command="load" file="$(find gb_robots)/definition/sim/my_laser_config.yaml" />
  </node>
</launch>
